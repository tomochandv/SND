<div class="row">
    <h3>Product Category</h3>
</div>

<div class="row">
    <form>
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text" class="form-control" id="txtName" placeholder="카테고리 명">
        </div>

    </form>
</div>

<div class="row" style="text-align:center;">
    <button type="button" class="btn btn-success" id="btnSave">Save</button>
    <button type="button" class="btn btn-warning" id="btnCancle">Cancle</button>
</div>

@section scripts{
    <script type="text/javascript">
    $(function () {
        $("#btnSave").click(function () {
            Page.Save();
        });
        $("#btnCancle").click(function () {
            location.href = '@Url.Action("Category")';
        });
    });

    var Page = {
        Save: function () {
            var data = Utill.Ajax("@Url.Action("Insert")", {
                name: $("#txtName").val()
            });

            if (data) {
                location.href = "@Url.Action("Category")";
            }
            else {
                alert('Fail.......');
            }
        },
        Del: function () {
            var data = Utill.Ajax("@Url.Action("Delete")", {
                id: $("#hidId").val()
            });

            if (data) {
                location.href = "@Url.Action("Index")";
                }
                else {
                    alert('Fail.......');
                }
        }
    }
    </script>
}